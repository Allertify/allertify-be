    "@adminjs/express": "^6.1.1",
    "@adminjs/prisma": "^5.0.4",
    "@prisma/client": "^5.22.0",
    "adminjs": "^7.8.17",
    "@ai-sdk/google": "^2.0.6",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/multer": "^2.0.0",
    "ai": "^5.0.15",
    "argon2": "^0.31.2",
    "axios": "^1.11.0",
    "cloudinary": "^2.7.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-formidable": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
