# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/allertify_db"

# JWT Configuration
JWT_ACCESS_SECRET="your-secret-key-here"
JWT_REFRESH_SECRET="your-refresh-secret-here"

# Development/Testing Bypass (set to 'true' to skip authentication)
BYPASS_AUTH="false"

# Hardcoded User Data (only used when BYPASS_AUTH=true)
HARDCODED_USER_ID="1"
HARDCODED_USER_EMAIL="test@example.com"
HARDCODED_USER_ROLE="user"

# Hardcoded Allergens (comma-separated, only used when BYPASS_AUTH=true)
HARDCODED_ALLERGENS="gluten,lactose,nuts,shellfish,eggs"

# AI Service Configuration
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"
GEMINI_API_KEY="your-gemini-api-key"

# AI Bypass (set to 'true' to use mock AI responses)
BYPASS_AI="false"

# Server Configuration
PORT=3000
NODE_ENV="development"
